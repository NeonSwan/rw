#!/usr/bin/env node

var os = require("os");

var rw = require("../");

var reader = rw.fileReader(process.argv[2] || "/dev/stdin"),
    parser = rw.lineParser(),
    writer = rw.fileWriter(process.argv[3] || "/dev/stdout");

reader.fill(filled);

function filled(error) {
  if (error) throw error;
  parser.push(reader.read());
  pushed(null);
}

function pushed(error) {
  if (error) throw error;
  var line;

  while ((line = parser.pop(reader.ended)) != null) {
    if (!writer.write(line + os.EOL)) {
      return writer.drain(pushed);
    }
  }

  if (reader.ended) writer.end(ended);
  else writer.drain(drained);
}

function drained(error) {
  if (error) throw error;
  reader.fill(filled);
}

function ended(error) {
  if (error) throw error;
}
